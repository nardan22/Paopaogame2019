<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:gravity="center|clip_vertical"
        android:orientation="vertical" android:background="@drawable/main_bcg">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp" android:gravity="center" android:paddingTop="10dp"
            android:layout_weight="0.08">
        <ImageView
                android:layout_height="60dp" android:id="@+id/ivSound"
                android:contentDescription="@string/melody_on_off"
                android:background="@drawable/oval_shape_green"
                android:src="@drawable/melody_on_off" android:elevation="2dp"
                android:translationZ="2dp" android:layout_marginBottom="10dp" android:layout_marginTop="10dp"
                android:adjustViewBounds="true" android:layout_width="60dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent" android:weightSum="3"
            android:layout_weight="0.5" android:layout_height="0dp">
        <ImageView
                android:layout_width="700dp"
                android:src="@drawable/game_title1"
                android:layout_height="wrap_content" android:id="@+id/ivGameTitle"
                tools:ignore="ContentDescription" android:adjustViewBounds="true"/>
        <Button
                android:layout_height="100dp"
                android:layout_marginTop="24dp"
                android:id="@+id/btnNewGame"
                android:elevation="5dp"
                android:translationZ="5dp"
                android:background="@drawable/button_style"
                android:text="@string/new_game" android:textColor="@android:color/black"
                android:textScaleX="1.1" android:textSize="45sp" android:typeface="monospace"
                android:layout_width="550dp" android:textStyle="bold"/>
        <Button
                android:layout_height="100dp"
                android:textSize="45sp"
                android:layout_marginTop="24dp"
                android:id="@+id/btnContinue"
                android:elevation="5dp"
                android:translationZ="5dp"
                android:background="@drawable/button_style" android:text="@string/continue_game"
                android:textColor="@android:color/black" android:typeface="monospace"
                android:textScaleX="1.1" android:layout_width="500dp" android:textStyle="bold"
        />
        <Button
                android:layout_height="100dp"
                android:textSize="45sp"
                android:layout_marginTop="24dp"
                android:id="@+id/btnExit"
                android:elevation="5dp"
                android:translationZ="5dp"
                android:background="@drawable/button_style" android:text="@string/exit_game"
                android:textColor="@android:color/black" android:typeface="monospace"
                android:textScaleX="1.1" android:layout_width="450dp" android:textStyle="bold"
        />

    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp" android:gravity="center" android:paddingTop="10dp"
            android:layout_weight="0.08">
    </LinearLayout>

</LinearLayout>