<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="600dp"
              android:layout_height="400dp"
              android:orientation="vertical"
              android:gravity="center"
              android:layout_gravity="center"
              android:background="@drawable/dialog_style"
              android:paddingBottom="20dp" android:paddingLeft="30dp" android:paddingRight="30dp"
              android:paddingTop="20dp">

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/win_dlg_title"
              android:textAlignment="center"
              android:fontFamily="serif" android:textStyle="bold" android:textColor="@color/colorAccent"
              android:textSize="30sp" android:textScaleX="1.1" android:layout_marginBottom="50dp"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginBottom="10dp" android:gravity="center" android:layout_gravity="center">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/win_dlg_score"
                  android:textAlignment="center"
                  android:fontFamily="serif" android:textStyle="bold" android:textColor="@color/colorAccent"
                  android:textSize="26sp" android:textScaleX="1.1"
                  android:layout_marginEnd="10dp"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/score_value"
                  android:textAlignment="center"
                  android:fontFamily="serif"
                  android:textStyle="bold"
                  android:textColor="@color/colorAccent"
                  android:textSize="26sp"
                  android:textScaleX="1.1"
                  android:id="@+id/tvScoreDB"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:gravity="center" android:layout_gravity="center" android:layout_marginBottom="50dp">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/win_dlg_level"
                  android:textAlignment="center"
                  android:fontFamily="serif" android:textStyle="bold" android:textColor="@color/colorAccent"
                  android:textSize="26sp" android:textScaleX="1.1"
                  android:layout_marginEnd="10dp"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/win_dlg_level_value"
                  android:textAlignment="center"
                  android:fontFamily="serif" android:textStyle="bold" android:textColor="@color/colorAccent"
                  android:textSize="26sp" android:textScaleX="1.1" android:id="@+id/tvLevelDB"
        />
    </LinearLayout>
    <Button
            android:text="@string/win_dlg_close"
            android:layout_width="match_parent"
            android:id="@+id/lcdBtnClose"
            android:background="@drawable/button_bcg" android:layout_height="80dp" android:textStyle="bold"
            android:textSize="30sp" android:textScaleX="1.1"/>

</LinearLayout>